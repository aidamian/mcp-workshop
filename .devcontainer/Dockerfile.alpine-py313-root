FROM python:3.13-alpine

RUN apk update \
    && apk add --no-cache \
        bash \
        build-base \
        ca-certificates \
        curl \
        git \
        libffi-dev \
        libnsl \
        libxml2-dev \
        libxslt-dev \
        linux-headers \
        nodejs \
        npm \
        openssl-dev \
        readline-dev \
        sqlite-dev \
        sudo \
        tzdata \
        xz \
        zlib-dev

RUN mkdir -p /workspaces

WORKDIR /workspaces

RUN npm install -g npm@latest

CMD ["/bin/bash"]
